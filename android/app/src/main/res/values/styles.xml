<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:forceDarkAllowed">false</item>

        <!-- Android 12+ -->
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <!-- Optionnel: si tu veux imposer l’icône du splash système -->
        <!-- <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash</item> -->
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- IMPORTANT: ne pas remettre le launch_background ici -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

</resources>